class Solution {
public:
    long long dividePlayers(vector<int>& skill) {
        sort(skill.begin(), skill.end());
        long long n = skill.size(), i = 0, j = n - 1, sum = skill[i] + skill[j],
            ans = 0;
        while (i < j) {
            if (sum == skill[i] + skill[j])
                ans += skill[i] * skill[j];
            else
                return -1;
            i++;
            j--;
        }
        return ans;
    }
};
