class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        int n = nums.size();
        int count = 1;
        int ind = 0;
        for (int i = 1; i <= n; i++) {
            if (i < n && nums[i] == nums[i - 1])
                count++;
            else {
                if (count >= 2) {
                    nums[ind++]=nums[i-1];
                    nums[ind++]=nums[i-1];
                } else {
                    nums[ind++]=nums[i-1];
                }
                count=1;
            }
        }
        return ind;
    }
};
