class Solution {
    public int[] pivotArray(int[] nums, int pivot) {
        int n = nums.length;
        int[] result = new int[n];
        int pivot_count = 0;
        int ind = 0;
        for (int i : nums) {
            if (i < pivot) {
                result[ind] = i;
                ind++;
            }
            if (i == pivot)
                pivot_count++;
        }
        while (pivot_count-- > 0) {
            result[ind] = pivot;
            ind++;
        }
        for (int i : nums) {
            if (i > pivot) {
                result[ind] = i;
                ind++;
            }
        }

        return result;
    }
}
