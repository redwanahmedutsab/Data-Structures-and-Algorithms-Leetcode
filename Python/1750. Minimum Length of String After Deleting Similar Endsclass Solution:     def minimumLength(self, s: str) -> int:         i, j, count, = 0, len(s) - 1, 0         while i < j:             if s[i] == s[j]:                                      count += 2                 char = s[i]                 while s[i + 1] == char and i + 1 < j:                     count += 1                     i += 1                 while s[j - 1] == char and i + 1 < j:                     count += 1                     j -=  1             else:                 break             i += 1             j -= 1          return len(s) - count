class Solution:
    def minimumLength(self, s: str) -> int:
        i, j, count, = 0, len(s) - 1, 0
        while i < j:
            if s[i] == s[j]:                     
                count += 2
                char = s[i]
                while s[i + 1] == char and i + 1 < j:
                    count += 1
                    i += 1
                while s[j - 1] == char and i + 1 < j:
                    count += 1
                    j -=  1
            else:
                break
            i += 1
            j -= 1

        return len(s) - count
                
