class Solution:
    def numRescueBoats(self, people: List[int], limit: int) -> int:
        n = len(people)
        people.sort()
        i = 0
        j = n - 1
        ans = 0
        while (i<=j):
            sum = people[i] + people[j]
            if sum <= limit:
                ans += 1
                i += 1
                j -= 1
            else:
                ans += 1
                j -= 1
        return ans
